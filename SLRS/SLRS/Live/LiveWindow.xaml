<Window x:Class="SLRS.LiveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LiveWindow" Height="482" Width="1120"
        ResizeMode="NoResize">
    <Grid>
        <Viewbox Margin="10 10 0 0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="324" Width="576" >
            <Image Source="{Binding ImageSource}" />
        </Viewbox>
        <Viewbox Width="150" Height="150" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="600,180,0,0">
            <Image Source="{Binding LeftHandSource}"  />
        </Viewbox>
        <Viewbox Width="150" Height="150" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="600,10,0,0">
            <Image Source="{Binding RightHandSource}"  />
        </Viewbox>
        <Label Content="{Binding StatusText}" FontSize="25px" VerticalAlignment="Bottom" HorizontalAlignment="Center" Height="70" Margin="8,0,10,20" Width="1100" />
        <ListBox HorizontalAlignment="Right" Height="340" Margin="0,10,10,0" VerticalAlignment="Top" Width="340"/>
        <Button Content="Start" HorizontalAlignment="Left" Margin="6,339,0,0" VerticalAlignment="Top" Width="75" Click="start_Click"/>
    </Grid>
</Window>
